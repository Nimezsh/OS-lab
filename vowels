#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <ctype.h>
#include <sys/wait.h>
#include <string.h>

int main() {
    char str[100];
    int i, vowels = 0, consonants = 0;
    pid_t pid;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);


    str[strcspn(str, "\n")] = '\0';

    pid = fork();

    if (pid < 0) {
        perror("Fork failed");
        return 1;
    }

    if (pid == 0) {
        
        printf("\nChild Process (Vowels):\n");
        for (i = 0; str[i] != '\0'; i++) {
            char ch = tolower(str[i]);
            if (isalpha(ch)) {
                if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
                    printf("%c ", str[i]);
                    vowels++;
                }
            }
        }
        printf("\nNumber of vowels: %d\n", vowels);
        exit(0); 
            } else {
        wait(NULL);

    
        printf("\nParent Process (Consonants):\n");
        for (i = 0; str[i] != '\0'; i++) {
            char ch = tolower(str[i]);
            if (isalpha(ch)) {
                if (!(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u')) {
                    printf("%c ", str[i]);
                    consonants++;
                }
            }
        }
        printf("\nNumber of consonants: %d\n", consonants);
    }

    return 0;
}
