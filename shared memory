// Writer program
#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>

int main() {
    // 1. Generate unique key
    key_t key = ftok("shmfile",65);

    // 2. Create shared memory segment (size = 1024 bytes)
    int shmid = shmget(key, 1024, 0666|IPC_CREAT);

    // 3. Attach to shared memory
    char *str = (char*) shmat(shmid, (void*)0, 0);

    printf("Write Data: ");
    fgets(str, 1024, stdin);

    printf("Data written in memory: %s\n", str);

    // 4. Detach
    shmdt(str);

    return 0;
}

//Sender Program
#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>

int main() {
    // 1. Generate same key
    key_t key = ftok("shmfile",65);

    // 2. Locate the shared memory segment
    int shmid = shmget(key, 1024, 0666|IPC_CREAT);

    // 3. Attach to shared memory
    char *str = (char*) shmat(shmid, (void*)0, 0);

    printf("Data read from memory: %s\n", str);

    // 4. Detach from shared memory
    shmdt(str);

    // 5. Destroy shared memory
    shmctl(shmid, IPC_RMID, NULL);

    return 0;
}


