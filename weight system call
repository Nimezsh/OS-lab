#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    pid_t pid;
    int status;

    pid = fork();

    if (pid < 0) {
        perror("Fork failed");
        return 1;
    } 
    else if (pid == 0) {
        printf("Child start\n");
        sleep(3); 
        printf("Child: Work done, exiting...\n");
        return 42; 
    } 
    else {
        printf("Parent: Waiting for child (PID = %d)...\n", pid);
        wait(&status); 
        if (WIFEXITED(status)) {
            printf("Parent: Child exited with status = %d\n", WEXITSTATUS(status));
        }
    }

    return 0;
}
