#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

int main() {
    pid_t pid;
    int n, i;
    int even_count = 0, odd_count = 0;
    int even_sum = 0, odd_sum = 0;

    printf("Enter the range (1 to n): ");
    scanf("%d", &n);

    pid = fork();

    if (pid < 0) {
        printf("Fork failed!\n");
        return 1;
    }
    else if (pid == 0) {
        for (i = 1; i <= n; i++) {
            if (i % 2 == 0) {
                even_count++;
                even_sum += i;
            }
        }
        printf("\n[Child P1] Even Count = %d, Even Sum = %d\n", even_count, even_sum);
    }
    else {
        wait(NULL);
        for (i = 1; i <= n; i++) {
            if (i % 2 != 0) {
                odd_count++;
                odd_sum += i;
            }
        }
        printf("[Parent P2] Odd Count = %d, Odd Sum = %d\n", odd_count, odd_sum);
    }

    return 0;
}
